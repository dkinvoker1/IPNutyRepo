@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{

    @model IEnumerable<IPNuty.Models.Singer>
    {
        ViewBag.Title = "Lista członków chóru";
    }

    <h2>Aktualizuj listę chórzystów</h2>
    <hr />

    <div>
        @Html.ActionLink("Dodaj nowego członka chóru", "Register", "Account")
    </div>

    <div>
        <table>
            <tr>
                <th>@Html.ActionLink("Imię", "SortujSinger", new { sortOrder = ViewBag.NameSortParm })</th>
                <th>@Html.ActionLink("Nazwisko", "SortujSinger", new { sortOrder = ViewBag.SurnameSortParm })</th>
                <th>@Html.ActionLink("Data dołączenia", "SortujSinger", new { sortOrder = ViewBag.DateSortParm })</th>
                <th>@Html.ActionLink("Aktywność", "SortujSinger", new { sortOrder = ViewBag.StatusSortParm })</th>
                <th>Usuń</th>
                <th>Posiadane nuty</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.JoiningDate.ToShortDateString()</td>
                    @if (item.Activicity)
                    {
                        <td><a href='@Url.Action("ChangeSingerActivicity", "AdminController", new { SingerId = item.SingerId})'>Aktywny<a /></td>
                    }
                    else
                    {
                        <td><a href='@Url.Action("ChangeSingerActivicity", "AdminController" , new { SingerId =item.SingerId})'>Nieaktywny<a /></td>
                    }
                    <td>@Html.ActionLink("Usuń członka", "DeleteUser", item)</td>
                    @*<td><button>Usuń członka</button></td>*@
                    @*<td><input type="button" value="Przeglądaj" onclick="location.href='@Url.Action("SingersSheetMusicListAcctualization", "Admin", new { Name = item.Name, LastName = item.LastName, Activicity = item.Activicity, JoiningDate = item.JoiningDate, SingerSheetMusicList = item.SingerSheetMusicList })'" /></td>*@
                    <td><input type="button" value="Przeglądaj" onclick="location.href='@Url.Action("SingersSheetMusicListAcctualization")?@item'" /></td>

                </tr>
            }
        </table>
    </div>

}

else
{
    <h2>@Html.ActionLink("Zaloguj się, aby mieć dostęp do tej strony.", "Login", "Account")</h2>
}


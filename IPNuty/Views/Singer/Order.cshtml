@if (Request.IsAuthenticated && User.IsInRole("Singer"))
{
@model IEnumerable<IPNuty.Models.Order>
    {
        ViewBag.Title = "Zamów nuty";
    }

<h2>Twoje zamówienia na kolejną próbę</h2>

@Html.ActionLink("Dodaj nowe zamówienie", "SheetMusicList")
    <br />
@ViewBag.Message

<div>
    <table>
        <tr>
            <td>Data złożenia zamówienia</td>
            <td>Realizacja</td>
            <td>Id</td>
            <td>Anuluj</td>
        </tr>

        @{ var orders = Model.Where(e => e.SingerId != null && e.SingerId.Name + e.SingerId.LastName == User.Identity.Name).ToList();}
        @{ var singerId = orders[0].SingerId.SingerId;
        }

        @foreach (var item in Model.Where(e => e.SingerId.SingerId == singerId))
        {
            <tr>
                <td>@item.OrderTime</td>
                <td>@item.Completed</td>
                <td>@item.SheetMusicId</td>
                <td>Anuluj zamówienie</td>

            </tr>
        }
    </table>
</div>
    }

else
{
    <h2>@Html.ActionLink("Zaloguj się, aby mieć dostęp do tej strony.", "Login", "Account")</h2>
}